<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 视频管理 -->
	<package name="ssh-video" extends="ssh-default" namespace="/">
		<action name="videoAction" class="videoAction">
			<result name="showVideo">/commons/index_content.jsp</result>
			<result name="play">/desktop/player.jsp</result>
			<result name="showByCategory">/desktop/categoryVideo.jsp</result>
			<result name="favlist">/desktop/favorite.jsp</result>
			<result name="addtoFav">/desktop/player.jsp</result>
		</action>
		<action name="m_videoAction" class="videoAction">
			<result name="showVideo">/mobile/commons/index_content.jsp</result>
			<result name="play">/mobile/page/player.jsp</result>
			<result name="showByCategory">/mobile/page/categoryVideo.jsp</result>
			<result name="favlist">/mobile/page/favorite.jsp</result>
			<result name="addtoFav">/mobile/page/player.jsp</result>
		</action>
	</package>
</struts>    
